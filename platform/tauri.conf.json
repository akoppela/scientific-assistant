{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Scientific Assistant",
  "version": "0.1.0",
  "identifier": "com.akoppela.scientific-assistant",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "",
    "frontendDist": "../bridge/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Scientific Assistant",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "focus": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
